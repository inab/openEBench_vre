          "chromatin",
          "dynamics",
          "visualization",
          "hi-C",
          "epigenetics",
          "nucleosome",
          "modeling",
          "next gen sequencing",
          "interaction",
          "rna",
          "dna",
          "protein",
          "sequence",
          "structure",
          "other"
        ]
      },
      "default": "other"
    },
    "keywords_tool": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "default": "other"
    },
    "infrastructure": {
      "type": "object",
      "properties": {
        "executable": {
          "type": "string"
        },
        "cpus": {
          "type": "integer",
          "minimum": 1,
          "maximum": 12,
          "default": 1
        },
        "memory": {
          "type": "number",
          "minimum": 0,
          "maximum": 24,
          "default": 0
        },
        "wallTime": {
          "type": "integer",
          "minimum": 5,
          "maximum": 1440,
          "default": 1440
        },
        "clouds": {
          "type": "object",
          "properties": {
            "mug-bsc": {
