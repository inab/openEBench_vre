    "PMES": {
      "type": "object",
      "properties": {
        "launcher": {
          "type": "string",
          "pattern": "^PMES$"
        },
        "workflowType": {
          "type": "string",
          "enum": [
            "Single",
            "COMPSs"
          ],
          "default": "Single"
