{
  "id": "http://multiscalegenomics.eu/tool-schema",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "title": "MuG tool definition schema",
  "description": "Specification of MuG tools as required for VRE",
  "properties": {
    "_id": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "title": {
      "type": "string",
      "default": "null"
    },
    "short_description": {
      "type": "string",
      "default": "null"
    },
    "long_description": {
      "type": "string",
      "default": "null"
    },
    "url": {
      "type": "string"
    },
    "publication": {
      "type": "string"
    },
    "owner": {
      "type": "object",
      "properties": {
        "institution": {
          "type": "string"
        },
        "author": {
          "type": "string"
        },
        "contact": {
          "type": "string"
